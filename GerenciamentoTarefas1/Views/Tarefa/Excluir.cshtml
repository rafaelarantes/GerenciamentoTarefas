@model GerenciamentoTarefas.Models.Tarefa

@{
    ViewData["Title"] = "Excluir Tarefa";
}

<h2>Tem certeza que deseja excluir esta tarefa?</h2>

<div class="form-group">
    <p><strong>Título:</strong> @Model.Titulo</p>
    <p><strong>Descrição:</strong> @Model.Descricao</p>
    <p><strong>Categoria:</strong> @Model.Categoria.Nome</p>
    <p><strong>Data de Conclusão:</strong> @Model.DataConclusao.ToString("dd/MM/yyyy")</p>
</div>

<form asp-action="ExcluirConfirmado" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <button type="submit" class="btn btn-danger">Excluir</button>
        <a href="@Url.Action("Index", "Tarefa")" class="btn btn-secondary">Cancelar</a>
    </div>
</form>
