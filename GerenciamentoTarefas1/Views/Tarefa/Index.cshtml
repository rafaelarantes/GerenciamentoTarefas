@model IEnumerable<GerenciamentoTarefas.Models.Tarefa>

@{
    ViewData["Title"] = "Tarefas";
}

<h1>Tarefas</h1>

<table class="table">
    <thead>
        <tr>
            <th>Título</th>
            <th>Descrição</th>
            <th>Status</th>
            <th>Categoria</th>
            <th>Data de Conclusão</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tarefa in Model)
        {
            <tr>
                <td>@tarefa.Titulo</td>
                <td>@tarefa.Descricao</td>
                <td>@tarefa.Status</td>
                <td>@tarefa.Categoria.Nome</td>
                <td>@tarefa.DataConclusao.ToString("dd/MM/yyyy")</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = tarefa.Id })" class="btn btn-warning">Editar</a>
                    <a href="@Url.Action("Delete", new { id = tarefa.Id })" class="btn btn-danger">Deletar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
