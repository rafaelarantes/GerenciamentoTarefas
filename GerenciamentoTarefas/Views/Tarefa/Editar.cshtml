@model GerenciamentoTarefas.Models.TarefaViewModel

@{
    ViewData["Title"] = "Editar Tarefa";
}

<div class="tarefa-editar">
    <h1>@ViewData["Title"]</h1>
    <hr />

    <form asp-action="Editar" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label asp-for="Nome" class="control-label"></label>
            <input asp-for="Nome" class="form-control" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Descricao" class="control-label"></label>
            <textarea asp-for="Descricao" class="form-control"></textarea>
            <span asp-validation-for="Descricao" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="DataConclusao" class="control-label"></label>
            <input asp-for="DataConclusao" class="form-control" />
            <span asp-validation-for="DataConclusao" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="CategoriaId" class="control-label"></label>
            <select asp-for="CategoriaId" class="form-control">
                <option value="">Selecione uma Categoria</option>
                @foreach (var categoria in Model.Categorias)
                {
                    <option value="@categoria.Value">@categoria.Text</option>
                }
            </select>
            <span asp-validation-for="CategoriaId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Status" class="control-label"></label>
            <select asp-for="Status" class="form-control">
                <option value="Pendente">Pendente</option>
                <option value="Concluida">Concluída</option>
            </select>
            <span asp-validation-for="Status" class="text-danger"></span>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Salvar</button>
        </div>
    </form>

</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
